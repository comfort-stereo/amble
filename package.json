{
  "name": "amble",
  "private": true,
  "workspaces": [
    "./client",
    "./common",
    "./server"
  ],
  "scripts": {
    "server": "yarn workspace @amble/server",
    "client": "yarn workspace @amble/client",
    "build": "yarn client build && yarn server build",
    "start": "yarn server start",
    "dev": "yarn dev:server & yarn dev:services & yarn dev:codegen",
    "dev:server": "yarn server dev",
    "dev:services": "docker-compose up --build db redis",
    "dev:codegen": "npm-watch codegen",
    "codegen": "yarn server codegen && yarn client codegen",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "jest --forceExit",
    "postinstall": "./post-install.sh"
  },
  "watch": {
    "codegen": {
      "patterns": [
        "client",
        "server"
      ],
      "ignore": [
        "client/src/generated",
        "**/node_modules"
      ],
      "extensions": "ts, tsx, graphql"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expo-yarn-workspaces": "^1.2.1",
    "jest": "^26.6.0",
    "jest-serial-runner": "^1.1.0",
    "npm-watch": "^0.7.0",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  }
}
